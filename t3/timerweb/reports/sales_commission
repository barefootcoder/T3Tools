-- SORT GROUP: Commission Reports
-- TITLE: Sales Commission

use TIMER
go

print "Period from [start_date] to [end_date]"
print ""
print ""
go

$(build_emp_comm "
	invoice_paydate between '[start_date]' and '[end_date]'
	and sales_comm_paydate is NULL
")
exec billing_amounts
go

