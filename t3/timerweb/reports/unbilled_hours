-- SORT GROUP: Error Checkers
-- TITLE: Unbilled Hours Report

select $(employee_name e) "employee",
	c.name "client", p.name "project",
	convert(char(10), date, 101) "date", hours
from time_log tl, employee e, client c, project p, project_type pt
where tl.invoice_id is NULL
and tl.emp = e.emp
and tl.client = c.client
and tl.client = p.client
and tl.proj = p.proj
and tl.date between p.start_date and p.end_date
and p.proj_type = pt.proj_type
and pt.requires_billing = 1
and pt.class_billing = 0
--and l.date >= "10/1/1997"
--order by date, l.emp
--	compute sum(time)
go
